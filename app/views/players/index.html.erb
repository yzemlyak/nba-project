<div>
  <div>
    <h1>
      List of all players
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new player
    </h2>

    <form action="/insert_player" method="post">
      <div>
        <label for="team_id_box">
          Team
        </label>

        <input type="text" id="team_id_box" name="query_team_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="points_per_game_box">
          Points per game
        </label>

        <input type="text" id="points_per_game_box" name="query_points_per_game">
      </div>

      <div>
        <label for="rebounds_per_game_box">
          Rebounds per game
        </label>

        <input type="text" id="rebounds_per_game_box" name="query_rebounds_per_game">
      </div>

      <div>
        <label for="assists_per_game_box">
          Assists per game
        </label>

        <input type="text" id="assists_per_game_box" name="query_assists_per_game">
      </div>

      <button>
        Create player
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Team
        </th>

        <th>
          Name
        </th>

        <th>
          Points per game
        </th>

        <th>
          Rebounds per game
        </th>

        <th>
          Assists per game
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_players.each do |a_player| %>
      <tr>
        <td>
          <%= a_player.id %>
        </td>

        <td>
          <%= a_player.team_id %>
        </td>

        <td>
          <%= a_player.name %>
        </td>

        <td>
          <%= a_player.points_per_game %>
        </td>

        <td>
          <%= a_player.rebounds_per_game %>
        </td>

        <td>
          <%= a_player.assists_per_game %>
        </td>

        <td>
          <%= time_ago_in_words(a_player.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_player.updated_at) %> ago
        </td>

        <td>
          <a href="/players/<%= a_player.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
